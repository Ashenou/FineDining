  <title>Fine Dine - Orders</title>
</head>

<body>

  <%# include('partials/_header') %>

    <div class="container">

      <form method="POST" action="/users/items">
        <div class='menu'>
          <div class="first-menu-column">
            <h3>Entree:</h3>
            <% for(let item of items) { %>
              <% if(item.item_type_name==='entree' ) {%>
                <div class="item">
                  <span>
                    <%= item.name %>
                    <input type="text" name="<%=item.id %>">
                  </span>
                  <br>
                  <%= item.description %>
                </div>
                <% } %>
                  <% } %>
                    <h3>Appetiziers:</h3>
                    <% for(let item of items) { %>
                      <% if(item.item_type_name==='appetizer' ) {%>
                        <div class="item">
                          <span>
                            <%=item.name %>
                              <input type="text" name="<%=item.id %>">
                          </span>
                          <br>
                          <%= item.description %>
                        </div>
                        <% } %>
                          <% } %>
          </div>

          <div class="second-menu-column">
            <h3>Beverage:</h3>
            <% for(let item of items) { %>
              <% if(item.item_type_name !=='entree' && item.item_type_name !=='appetizer' ) {%>
                <div class="item">
                  <span>
                    <%= item.name %>
                    <input type="text" name="<%= item.id %>">
                  </span>
                  <!-- <button type="button" class="btn btn-outline-primary">Add to cart</button> -->
                  <br>
                  <%= item.description %>
                </div>
                <% } %>
                  <% } %>
          </div>
          <!-- <td><button type="submit" class="btn btn-outline-danger">Delete</button></td> -->
        </div>
        <button type="submit" id="submit">Create order</button>
      </form>
    </div>
</body>
<script>
  document.getElementById("submit").onclick(alert("Your order was sent to restaurant"))
</script>

</html>
