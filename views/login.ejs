<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/styles/login.css" >
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
  <title>Fine Dining - Login</title>
</head>
<%- include('_partials/_header') %>

  <body class="login-page">
    <div class="login-container" style="margin-top: 200px;">
      <form id="login-form" method="POST" action="/users/login">
        <h2 class="title">Login</h2>
        <div>
          <input class="form-control form-control-lg" name="email" type="email" id="email" placeholder="Enter email">
        </div>

        <div>
          <input class="form-control" name="password" type="password" id="password" placeholder="Password">
        </div>

        <div class="button-container">
          <button class="btn btn-success" type="submit">Login</button>
          <a href="http://localhost:8080/" class="btn btn-success" role="button">Cancel</a>
        </div>
      </form>
    </div>
  </body>

</html>
